{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictBindCallApply":true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
      "./src/**/*"
  ]
}