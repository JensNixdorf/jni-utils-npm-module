    "version": "0.2.0",
    "configurations": [
        {
            "name": "Keytool UI",
            "console": "integratedTerminal",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/jni/utils/crypto/KeyTool.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "name": "Keytool w/ args",
            "console": "integratedTerminal",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/jni/utils/crypto/KeyTool.ts",
            "args": ["--createKeys","Florian"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "name": "Test CreateDaysPerWeek",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/jni/utils/common/TestCreateDaysPerWeek.ts",
            "env": {"CONFIG_FILE_ENV":"jni-dev", "TZ":"UTC"},
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}